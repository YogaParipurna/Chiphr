<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    android:orientation="vertical"
    tools:context=".AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp">
        <LinearLayout
            android:background="@drawable/bg2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bank"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chiphr"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"/>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="About the App"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="22dp">
        <TextView
            android:textStyle="bold"
            android:gravity="start|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="    Aplikasi dengan Nama Chiphr, Chiphr di ambil dari bahasa Thailand yang berarti Pulsa  . Aplikasi yang bertujuan untuk menyimpan data pembelian Pulsa"/>
    </LinearLayout>

    <Button
        android:id="@+id/backh"
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:startColor="@android:color/holo_red_light"
        android:endColor="@android:color/holo_blue_dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="69dp"
        android:background="@android:color/holo_blue_light"
        android:text="home"
        android:textColor="#fff" />
    <!--        android:background="@drawable/buttonstyleithgradient"-->
</LinearLayout>